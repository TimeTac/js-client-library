{
  "include": ["./src/index.ts"],
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": [
        "es2016",
        "dom",
        "es5"
      ],
      "outDir": "./dist",
      "strict": true,
      "declaration": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "plugins": [
        {
          "transform": "ts-auto-mock/transformer",
          "cacheBetweenTests": false,
        }
      ]
  },
}
